# ================= AUTHORS ======================= #

### GET all
// @name authors
GET {{apiUrl}}/authors

### GET one
GET {{apiUrl}}/authors/{{authors.response.body.$.[0]._id}}

### POST
// @name author
POST {{apiUrl}}/authors
content-type: application/json

{
  "fullName": "Stephen King"
}

### PUT
// @name author
PUT {{apiUrl}}/authors/{{author.response.body.$._id}}
content-type: application/json

{
  "fullName": "Stephen Edwin King"
}

### GET one
// @name author
GET {{apiUrl}}/authors/{{author.response.body.$._id}}

### DELETE
DELETE {{apiUrl}}/authors/{{author.response.body.$._id}}

# ================= BOOKS ======================= #

### GET all
// @name books
GET {{apiUrl}}/books

### GET one
// @name book
GET {{apiUrl}}/books/{{books.response.body.$.[0]._id}}

### POST
// @name book
POST {{apiUrl}}/books
content-type: application/json

{
  "title": "Doctor Sleep",
  "author": {
    "_id": "{{author.response.body.$._id}}"
  }
}

### PUT
// @name book
PUT {{apiUrl}}/books/{{book.response.body.$._id}}
content-type: application/json

{
  "title": "Doctor Sleep {{$randomInt 0 10}}",
  "author": {
    "_id": "{{author.response.body.$._id}}"
  }
}

### DELETE
DELETE {{apiUrl}}/books/{{book.response.body.$._id}}
